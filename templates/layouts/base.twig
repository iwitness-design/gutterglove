<!DOCTYPE html>
<html class="no-js" lang="en" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="{{ site.charset }}" />
    <meta name="description" content="{{ site.description }}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="author" href="{{ site.theme.link }}/humans.txt" />
    <link rel="pingback" href="{{ site.pingback_url }}" />
    <link rel="profile" href="http://gmpg.org/xfn/11">

	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script>
      document.querySelector('html').classList.remove('no-js');
	</script>

    {{function('wp_head')}}

</head>

<body class="{{ body_class }}">
{% block header %}
	{% include 'components/header.twig' %}
{% endblock %}

{% block hero %}
	{% if pageName == 'Home' %}
		{% include 'components/hero.twig' %}
	{% elseif pageName == 'Contact' %}
		{% include 'components/hero-contact.twig' %}
	{% elseif pageName == 'Products' %}
		{% include 'components/hero-products.twig' %}
	{% else %}
		{% include 'components/hero-page.twig' %}
	{% endif %}
{% endblock %}


<main class="o-wrapper o-wrapper--content">
	{% block content %}
		Sorry, no content
	{% endblock %}
</main>

{% block footer %}
	{% include 'components/footer.twig' %}
{% endblock %}
</body>
</html>
