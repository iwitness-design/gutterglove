<article class="c-blogpost">

	{% if p.thumbnail %}
      <img class="c-blogpost__image c-blogpost__image--fullwidth" src="{{ p.thumbnail.src }}" alt="{{ p.title }}" />
	{% else %}
      <img class="c-blogpost__image c-blogpost__image--fullwidth" src="{{ site.theme.uri }}/dist/assets/images/temp/home-about.jpg" alt="" />
	{% endif %}

  <div class="c-blogpost__content">
    {% if pageName == 'Home' %}
    <div class="c-slider__controls-wrap">
      <span class="c-blogpost__category">ABOUT GUTTER GUARDS</span>
      <div class="c-slider__arrows glide__arrows" data-glide-el="controls">
        <button class="c-slider__chevron c-slider__left glide__arrow glide__arrow--left" data-glide-dir="<">
          <span class="u-hidden-visually">prev</span>
        </button>
        <button class="c-slider__chevron c-slider__right glide__arrow glide__arrow--right" data-glide-dir=">">
          <span class="u-hidden-visually">next</span>
        </button>
      </div>
    </div>
    {% else %}
    <span class="c-blogpost__date">{{ p.date }}</span>
    {% endif %}
    <h2 class="c-blogpost__heading"><a href="{{ p.link }}">{{ p.title }}</a></h2>
    <p class="c-blogpost__text">{{ p.preview.read_more('').length(25) }}</p>
    <div class="c-blogpost__links o-layout">
      <a href="{{ p.link }}" class="c-link--red is-chevron">Read Article</a>
      {% if pageName == 'Home' %}
      <a href="/blog/" class="c-link--red is-chevron">View All</a>
      {% endif %}
    </div>
  </div>
</article>
